<Window x:Name="MindForge" x:Class="MindForge.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:MindForge"
        mc:Ignorable="d"
        Closed="MindForge_Closed"
        Title="MindForge" Height="768" Width="1024" Background="#FF1F1F1F" WindowStartupLocation="CenterScreen" Icon="/Images/Logo.png" FontFamily="Cambria" FontSize="14" MinWidth="932" MinHeight="512" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="10"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainGrid" MinWidth="768" MinHeight="496">
        <Button x:Name="CloseButton" Content="X" Click="Button_Click" WindowChrome.IsHitTestVisibleInChrome="True" Height="25" Width="30" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="1"/>
        <Button x:Name="MinimizeButton" Content="-" Click="MinimizeButton_Click" Height="25" Width="30" WindowChrome.IsHitTestVisibleInChrome="True" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 60 0" Panel.ZIndex="1"/>
        <Button x:Name="MaximizeButton" Content="U" Click="MaximizeButton_Click" Height="25" Width="30" WindowChrome.IsHitTestVisibleInChrome="True" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 30 0" Panel.ZIndex="1"/>

        <DockPanel MinWidth="768" MinHeight="496">
            <Rectangle DockPanel.Dock="Top" Fill="#171717" Height="25" MouseDown="Rectangle_MouseDown"/>
            <Grid x:Name="LoadingGrid" MinWidth="768" MinHeight="496">
                <Image gif:ImageBehavior.AnimatedSource="Images/Loading.gif" Height="50" Width="50" Margin="0 250 0 0"/>
                <Image Source="Images/FullLogo.jpg" Height="350" Width="350" Margin="0 0 0 100" Panel.ZIndex="-1"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
